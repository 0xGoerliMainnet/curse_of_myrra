<div class="container">
  <p>Game session: <%= :erlang.term_to_binary(@runner_pid) |> Base.encode64() %></p>
  <div class="board">
    <%= for row <- @grid do %>
      <div class="row">
        <%= for player_id <- row do %>
          <% player = Enum.find(@players, fn player -> player.id == player_id end)  %>
          <div class={"box box-#{player_id}"}>
            <%= if player != nil do player.health end %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
